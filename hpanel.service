[Unit]
Description=hPanel - File Manager
Documentation=https://github.com/yourusername/hpanel
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/hpanel
ExecStart=/usr/bin/node server.js
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=hpanel

# Environment
Environment=NODE_ENV=production

# Security
NoNewPrivileges=true
PrivateTmp=true

# Performance
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
